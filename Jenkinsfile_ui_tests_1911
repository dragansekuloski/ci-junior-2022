pipeline {
    agent any
    parameters {
        string(name: 'ENVIRONMENT', defaultValue: 'DEV', description: 'Target env for test execution.')
    }

    triggers { 
        pollSCM('*/1 * * * *') 
    }

    stages {
        stage('test') {
            steps {
                echo "Running UI test on ${params.ENVIRONMENT} environment"
            }
        }
    }
}
